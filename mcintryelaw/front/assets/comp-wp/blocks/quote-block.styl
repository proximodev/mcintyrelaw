.quote-block
  margin-bottom 42px
  .wp-block-quote
    border-radius: 8px
    background: $bg-color-white
    box-shadow: 0px 0px 11.5px 5px rgba(0, 0, 0, 0.07);
    padding 30px 35px
    display flex
    border 0
    margin 0
    &:before
      content ''
      display block
      width 15px
      height 12px
      background-image: url(../images/icons/quote.svg)
      background-repeat: no-repeat
      background-size: contain
      margin-right 14px
      margin-bottom 5px
      flex-shrink: 0
  p
    titleFontFamily()  
    color $text-color-red 
    font-size: 25px
    text-transform uppercase
    line-height 1.11
    letter-spacing: .3px

+media-mobile()
  .quote-block
    .wp-block-quote  
      padding 30px 25px 
      &:before
        width 13px
        margin-right 12px
    p 
      font-size: 20px