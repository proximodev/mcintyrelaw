.featured-news-block
  .gb-container
    padding 17px
    height 100%
  .gb-block-image
    margin-bottom 20px
    display block
    padding-top 50%
    position relative
    img
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      object-fit: cover
  .featured-news-post-title
    a
      display block
      font-family: "Open Sans", sans-serif
      font-size: 16px
      font-weight 700
      text-decoration underline
      line-height 1.4
      tro()
      &:hover
        opacity .75
  .featured-news-read-more
    color: $text-color-red;
    font-weight: 700;
    text-transform: uppercase;
    margin-top 16px
    trc()
    &:hover
      color $bg-hover-red

+media-tablet(800px)
  .featured-news-block
    .gb-grid-column
      width 100% !important

+media-mobile(600px)
  .featured-news-block
    padding: 76px 0 200px !important
    position relative
    .gb-button
      position absolute
      bottom: 120px
      left 50%
      transform: translateX(-50%)
