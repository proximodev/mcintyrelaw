.text-image-banner
  padding 150px 0 70px
  >.wp-block-columns
    position relative
    min-height: 505px
    padding-top 0 !important
    padding-bottom 0 !important
  ._text-wrapper
    max-width 51.3%
  .published-date  
    position absolute
    left 60px
    top -44px
  h2
    color $text-color-blue
  p
    margin-bottom 20px  
  .wp-block-image
    width 45%
    max-width 575px
    height: 100%
    position absolute
    right 0
    top 0
    padding-right 60px
    img 
      width 100%
      height 100%
      object-fit: cover

+media-tablet()
  .text-image-banner
    .published-date  
      right 40px
    .wp-block-image
      padding-right 40px

+media-mobile()
  .text-image-banner
    padding 70px 0
    ._text-wrapper
    .wp-block-image 
      width 100%
      max-width: 100%
    .published-date  
      position static
      margin-bottom 18px  
    .wp-block-image  
      padding 0
      position static
      margin 28px 0 38px
      height auto
      img 
        height auto
