.text-image-banner-full-width
  width: 100vw;
  position: relative;
  left: 50%;
  right: 50%;
  margin-left: -50vw !important;
  margin-right: -50vw !important;
  margin-bottom: 90px !important;
  h1, h2
    color $text-color-blue
    width 90%
  .image-wrapper
    width: 100%
    height: 650px;
    position: relative;
    overflow-x: hidden;
    overflow-y: hidden;
  .text-wrapper
    position: absolute
    left: 50%;
    transform: translateX(-50%);
    bottom: -60px
    max-width: $container-max-width
    padding 60px 60px 48px 60px
    color: #ffffff
    p
      color: #ffffff
    
+media-tablet()
  .text-image-banner-full-width
    h1, h2
      width 100%
    .image-wrapper
      height: 500px;
    .text-wrapper
      padding 50px 50px 38px 50px
  
+media-tablet(1023px)
  .text-image-banner-full-width
    margin-bottom 30px !important
    .image-wrapper
      height: 350px;
    .text-wrapper
      padding  40px 40px 28px 40px
      position: relative
      bottom:  0px
      
+media-mobile()
  .text-image-banner-full-width
    .image-wrapper
      height: 250px;