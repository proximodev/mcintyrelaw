.content-grid-block
  display: grid
  grid-auto-rows: 1fr
  gap: 30px
  margin-bottom
  .content-grid-item
    background-color: var(--base-3);
    box-shadow: 0px 0px 8px 4px rgba(0,0,0,0.1);
    padding: 40px 30px 30px;
    h3, h4
      font-size: 25px

+media-mobile()
  .content-grid-block
    grid-auto-rows: auto
    .content-grid-item
        padding: 30px 30px 25px