.full-width-photo-text-block
  padding 110px 0 90px
  display flex
  flex-direction: column
  .gb-container
    width 100%
    max-width: 1250px !important
  p, h2
    max-width: 1052px
  h2
    margin-bottom 14px 
  p
    margin-bottom 28px 
  .text-wrapper
    margin-bottom 30px !important

+media-mobile()
  .full-width-photo-text-block
    padding: 80px 0 60px
    .text-wrapper
      order 4
    h2
      margin-bottom -4px  
