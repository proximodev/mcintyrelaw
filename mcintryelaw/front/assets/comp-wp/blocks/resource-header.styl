.resource-header
  margin 56px 0 100px !important
  >.wp-block-columns
    justify-content space-between
    .wp-block-column
      &:last-child
        max-width: 730px
        >.gb-container
          height 100%
  h2
    font-size: 35px
    color $text-color-red      
  .content-grid-item  
    box-shadow: 0px 0px 8px 4px rgba(0,0,0,0.05)
.resource-header-description
  max-width: 385px
  h3
    font-size: 35px
    color $text-color-red
.resource-header-search  
  label
    display none  
  input
    border: 0 !important
    background: #FFF !important
    box-shadow: 0px 0px 8px 4px rgba(0, 0, 0, 0.05)
  button
    min-width 112px !important
.resource-header-links
  h3
    font-size: 25px
    margin 8px 0 16px
  .gb-container.content-grid-item
    padding 40px 30px
  .wp-block-columns
    justify-content space-between
    max-width: 590px
    margin 0 auto
  .wp-block-column  
    flex-basis: auto
    flex-grow: 0
    &:last-child
      padding-left 9%
      border-left: 1px solid $text-color-red
  ul
    margin-left 0  
    list-style none
    min-height: 125px
    &:last-child
      margin-bottom 0
  li 
    
    margin-bottom 12px  
  a 
    font-size: 16px
    color $text-color-red
    font-weight 700
    text-decoration underline 1px
    text-underline-offset: 2px

+media-tablet(781px)
  .resource-header
    >.wp-block-columns
      row-gap: 76px
      .wp-block-column
        &:last-child
          max-width: 100%
  .resource-header-description
    max-width: 100%
  .resource-header-search
    margin-bottom 16px  
  .resource-header-links
    .wp-block-columns  
      gap 0
    .wp-block-column  
      &:last-child
        padding-left 0
        border-left: 0
    ul
      min-height: 0
      margin-bottom 40px !important
