.search-wrapper
  .search-toggle 
    padding-bottom 5px
.search-form
  display flex
  position absolute
  right 26px
  bottom -53px
  box-shadow: 0px 0px 6px 0px rgba(0, 0, 0, 0.09);
  height 35px
  overflow: hidden
  z-index 1
  opacity 0
  pointer-events: none
  tro()
  ._search-open &
    opacity 1
    pointer-events: all  
  .search-input
    border-radius: 5px 0 0 5px;
    background: #FFF !important
    height 100%
    border: 0
    color $text-color-base !important
    width 293px
    font-size: 16px
    padding 5px 16px
  .search-button 
    border-radius: 0 5px 5px 0;
    background-color: $bg-color-red
    width: 41px;
    height 100%
    flex-shrink: 0;
    padding 7px
    trbg()
    &:hover 
      background-color: $bg-hover