.menu-cta-wrapper
  max-width: 100%
  padding 20px
  display flex
  align-items end
  box-shadow: 0px 0px 7.8px 4px rgba(0, 0, 0, 0.05);
  position relative
  trc()
  &:after
    display block
    content ''
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    background: $red
    opacity 0
    pointer-events: none
    tro(.3s)
  &:hover  
    color $white
    &:after
      opacity 1
    .menu-cta-title
      &:after
        background-image: url(../images/svg/b-angle-wr.svg)  
  &._dark
    color $white
    &:before
      display block
      content ''
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      background: rgba(0, 0, 0, 0.45)
    .menu-cta-title
      &:after
        background-image: url(../images/svg/b-angle-wr.svg)
  &._light
    background-color: $blue  
    background-position: 86% 16px   
    background-size: 65%
.menu-cta-title
  font-family: Staatliches, sans-serif;
  font-size: 37px
  font-weight 400
  line-height 1.11
  display flex
  align-items end
  position relative
  z-index 1
  margin 0
  &:after
    display block
    content ''
    width 36px
    height 36px
    background-image: url(../images/svg/b-angle-rr.svg)
    background-repeat: no-repeat
    background-size: contain
    margin-left 10px
 