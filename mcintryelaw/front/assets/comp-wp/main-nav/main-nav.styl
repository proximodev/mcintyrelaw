.main-navigation
  border-top 1px solid $bg-color-red
  .main-nav
    >ul
      >li
        padding 0 10px
        a
          color: #333 !important
          font-weight: 700;
          padding-left 0 !important
          padding-right 0 !important

+media-tablet()    
  .main-navigation 
    .inside-navigation
      height 90px
      justify-content end !important  
      .menu-toggle
        flex-grow: 0 
        padding-right 0
        .mobile-menu 
          display none
    &.toggled 
      .main-nav
        position: absolute;
        left: 0;
        top: 90px;
        width: 100%;
        background: $bg-color-white
        z-index: 2;     
        padding 0 10px 50px
        min-height: calc(100vh - 89px)
