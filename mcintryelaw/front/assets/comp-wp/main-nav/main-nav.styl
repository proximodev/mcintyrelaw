.main-navigation
  border-top 1px solid $bg-color-red
  .main-nav
    >ul
      >li
        padding 0 10px
        a
          color: #333 !important
          font-weight: 700;
          padding-left 0 !important
          padding-right 0 !important

+media-tablet()    
  .main-navigation 
    border-top 0
    .inside-navigation
      height 90px
      justify-content end !important  
      .menu-toggle
        flex-grow: 0
        width: 49px;
        height: 42px;
        line-height 42px
        border-radius: 5px;
        border: 2px solid $bg-color-red
        display flex
        align-items center
        justify-content center
        padding 0
        svg 
          width 27px
          height 21px
          fill: $bg-color-red
          position static
        .mobile-menu 
          display none
      .main-nav
        opacity 0
        tro()    
        position: absolute;
        left: 0;
        top: 248px;
        width: 100%;
        background: $bg-color-white
        z-index: 2;     
        padding 0 10px 50px
        min-height: calc(100vh - 247px)
        z-index -1
        .mobile-menu-open &
          opacity 1
          pointer-events: all
          z-index 3
        >ul
          >li
            a
              font-size: 16px