.hero-cta-wrapper
  padding 23px 0 !important
  >.gb-container
    max-width: 1290px
    padding 0 40px
    margin 0 auto
  .hero-cta-item
    padding 17px 24px
    display flex
    align-items end  
    justify-content space-between
    flex-basis: auto
    flex-grow: 1
    min-width 20%
    &:not(:first-child)
      border-left 2px solid #D9D9D9
    svg 
      flex-shrink: 0
      margin-left 10px
      * 
        transition stroke .2s ease-out
    a:hover
      ~svg *
        stroke $bg-hover-red  
      +h2
        color $bg-hover-red  
  h2
    font-size: 35px
    color $text-color-red
    line-height 1.11  
    margin-bottom 0
    max-width: 180px
    trc()

+media-tablet()
  .hero-cta-wrapper
    >.gb-container
      flex-wrap: wrap
    .hero-cta-item
      flex-basis 50%
      &:nth-child(odd)
        border 0

+media-mobile()
  .hero-cta-wrapper
    padding-top 0 !important
    >.gb-container
      display block
      padding 0 24px
    .hero-cta-item
      padding 40px 0
      border-bottom 2px solid $text-color-red !important
      &:not(:first-child)
        border-left 0

