.container
  margin 0 auto
  width 100%
  max-width 1190px

._mobile
  display none

.breadcrumb-wrapper 
  span
    a
      font-weight 700
      text-decoration underline 1px
      text-underline-offset 2px
    &.breadcrumb_last
      font-weight 400  

.container.grid-container .site-content main article .inside-article section.gb-container,
.container.grid-container .site-content main article .inside-article section.wp-block-group,
.archive .container.grid-container .site-content main section.gb-container,
.archive .container.grid-container .site-content main section.wp-block-group
  margin-bottom 60px

.grid-container.container
  max-width: $container-max-width    

.gb-container.full-width, section.is-style-full-width, .wp-block-cover.is-style-full-width
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw !important;
    margin-right: -50vw !important;

.gb-container.full-width > .gb-container, .gb-container.full-width > .wp-block-columns
  max-width: $container-max-width
  margin: 0px auto
  padding-left $container-padding-desktop
  padding-right $container-padding-desktop

section.gb-container > .gb-container.inside-padding, 
section.gb-container > .wp-block-group.inside-padding,
section.gb-container > .wp-block-columns.inside-padding,
section.gb-container.text-block-container > .wp-block-group
  padding-top $container-padding-desktop
  padding-bottom $container-padding-desktop

section.gb-container > .gb-container.inside-padding > p:last-child,
section.gb-container > .wp-block-group.inside-padding > .wp-block-group__inner-container > p:last-child,
section.gb-container.text-block-container > .wp-block-group > .wp-block-group__inner-container > p:last-child
  margin-bottom: 5px;

.no-margin-bottom
  margin-bottom: 0px !important;
   
.no-padding-bottom
  padding-bottom: 0px !important;

.no-margin-top
  margin-top: 0px !important;
   
.no-padding-bottom
  padding-top: 0px !important;
   
.wp-block-spacer.spacer-medium
  height: 60px !important

#map-section .map-container
  position: relative;
  width: 100%;
  height: 450px;

#map-section .map-overlay
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: transparent;
  z-index: 1;
  
#map-section .icon-contact > img
  margin-bottom: 5px
  
.pull-up-300
  position: relative
  top: -300px
  margin-bottom: -280px !important
  
.pull-up-200
  position: relative
  top: -200px
  margin-bottom: -180px !important

.pull-up-100
  position: relative
  top: -100px
  margin-bottom: -80px !important

.responsive-iframe-wrapper
   position: relative;
   width: 100%;
   padding-top: 56.25%;

.responsive-iframe-wrapper iframe
   position: absolute;
   top: 0;
   left: 0;
   width: 100%;
   height: 100%;
   border: 0;

+media-tablet()
  .gb-container.full-width > .gb-container, 
  .gb-container.full-width > .wp-block-columns,
  .one-container .site-content
    padding-left $container-padding-tablet !important
    padding-right $container-padding-tablet !important
    
  section.gb-container > .gb-container.inside-padding, 
  section.gb-container > .wp-block-group.inside-padding,
  section.gb-container > .wp-block-columns.inside-padding,
  section.gb-container.text-block-container > .wp-block-group,
    padding-top $container-padding-tablet
    padding-bottom $container-padding-tablet

  .pull-up-300, .pull-up-200, .pull-up-100
    position: relative
    top: 0px
    margin-bottom: 0px !important
  
  .wp-block-spacer.spacer-medium
    height: 50px !important
    
+media-mobile(768px)
  .one-container .site-content
    padding-top: 0 !important;
    
  .wp-block-columns:has(.wp-block-column > ul.wp-block-list)
    row-gap: 0;
  
  .wp-block-columns > .wp-block-column > ul.wp-block-list
    margin: 0 0 0em 3em;

+media-mobile()
  ._mobile
    display block
  ._desktop
    display none !important

+media-mobile(600px)
  .container.grid-container .site-content main article .inside-article section.gb-container,
  .container.grid-container .site-content main article .inside-article section.wp-block-group
    margin-bottom 40px
      
  .gb-container.full-width > .gb-container, 
  .gb-container.full-width > .wp-block-columns,
  .one-container .site-content
    padding-left $container-padding-mobile !important
    padding-right $container-padding-mobile !important

  section.gb-container > .gb-container.inside-padding,
  section.gb-container > .wp-block-group.inside-padding,
  section.gb-container > .wp-block-columns.inside-padding,
  section.gb-container.text-block-container > .wp-block-group
    padding-top $container-padding-mobile
    padding-bottom $container-padding-mobile
    
  .wp-block-spacer.spacer-medium
    height: 30px !important
