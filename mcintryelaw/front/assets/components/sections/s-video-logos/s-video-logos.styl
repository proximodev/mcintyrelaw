.s-video-logos
  padding 65px 50px 70px 50px
  background: $bg-color-blue
  &__link
    text-decoration underline
    font-weight 700
    color $text-color-base
  &__top
    margin-bottom 40px  
  &__title
    margin-bottom 20px  
  &__text
    margin-bottom 20px   
  &__inner
    display flex
    column-gap: 2%  
  &__main
    flex-basis 69.5%
    .s-media__inner
      padding-top 59% 
      svg
        width 140px
        height 140px 
    &-logo
      padding 20px
      background: $bg-color-white   
      position relative
      padding-top 37.5%
      img
        position absolute
        left 0
        top 0
        right 0
        bottom 0
        width 100%
        height 80%
        margin: auto
        object-fit: contain 
  &__list
    display flex
    flex-direction: column
    justify-content space-between
    flex-basis 28.5%
  &__item
    width 100%
    &+&
      margin-top 10px 
    .s-media__inner
      padding-top 47%   
      svg
        width 73px
        height 73px
    &-logo
      padding 12px 20px
      background: $bg-color-white   
      padding-top 26.5%
      position relative
      img
        position absolute
        left 0
        top 0
        right 0
        bottom 0
        width 100%
        height 80%
        margin: auto
        object-fit: contain 

+media-mobile()
  .s-video-logos
    padding 65px 35px 100px
    padding-bottom 100px
    &__inner
      display block
    .s-media__inner
      padding-top 68%   
      svg
        width 82px
        height 82px
    &__main
      &-logo
        padding-top 41.5%  
    &__item
      width 100%
      margin-top 28px !important  
      &-logo
        padding-top 41.5%
