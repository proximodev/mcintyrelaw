.s-video
  padding 0px 50px 20px
  position relative
  &:before
    content ''
    display block
    position absolute
    top 50%
    left 0
    width 100%
    height 100%
    background: $bg-color-blue
    z-index -1
  h3
    margin-bottom 40px
    text-align center  
.s-videos
  padding 60px 50px 105px
  background: $bg-color-blue
  &.white-bg
    background: $bg-color-white
    padding-left 0
    padding-right 0
  &__title
    margin-bottom 30px
  &__list
    display grid
    grid-template-columns: repeat(3, 1fr)
    column-gap: 22px
    row-gap: 22px
    &-wrapper
      height: 560px
      overflow: hidden
      transition: height .3s ease-out
      &.view-all
        height: auto
  &__item
    height 100%
    &:nth-child(3) ~ .s-videos__item 
      tro()
      opacity .35
      pointer-events: none
    ._opened &,
    .view-all &
      opacity 1 !important
      pointer-events: all !important
    &-img
      width 100%
      height 224px
      object-fit: cover 
    &-info
      padding 16px 20px
      background: $bg-color-white
      display flex
      align-items center
      justify-content center
      min-height: 136px
    &-title
      color $text-color-red
      text-align: center;
      margin-bottom 0
  &__btn-wrapper  
      text-align center
      margin-top 30px
  .s-media__inner
    padding-top 66.4%   
  ._abs  
    abs()
        
+media-tablet()
  .s-video
    padding 0px 40px 0px
  .s-videos
    padding 60px 40px 105px
    &__list
      grid-template-columns: repeat(2, 1fr)
    &__item  
      &:nth-child(2) ~ .s-videos__item 
        opacity .35
        pointer-events: none
       
+media-mobile(600px)
  .s-video
    padding 0px 30px 0px
    margin 0 -30px
  .s-videos
    padding 60px 30px 105px
    margin 0 -30px
    &__list
      grid-template-columns: repeat(1, 1fr)
      &-wrapper
        height 1320px
    &__item  
      &:nth-child(2) ~ .s-videos__item 
        opacity 1
        pointer-events: all
      &:nth-child(3) ~ .s-videos__item 
        opacity .35
        pointer-events: none
  