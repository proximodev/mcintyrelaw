.s-media
  &__title
    text-align center
    margin-bottom 4rem
  &__inner
    display block
    padding-top 56.25%
    position relative
    overflow hidden
    cursor pointer
    ._rounded &
      border-radius 1.6rem
    img 
      abs()
      object-fit contain
    svg 
      width 8rem
      height 8rem 
      position absolute
      top 0
      bottom 0
      left 0
      right 0 
      margin auto
  &__overlay    
    abs()    
    ._overlay &
      background: rgba(#000, .8)
    ._play & 
      display none  
