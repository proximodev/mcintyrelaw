.sl-testimonials
  &__list
    padding 40px 0 30px
  &__item
    padding 0 10px
    position relative
    cursor pointer
    tro()
    &:hover
      opacity .8
    img
      width 100%
      height 100%
      object-fit: cover
    svg  
      position absolute
      left calc(50% - 29px)
      top calc(50% - 29px)
  &__arrows
    display flex
    column-gap: 14px
    svg 
      fill none      
    
+media-mobile(600px)    
 .sl-testimonials
    &__list
      padding-top 0
    &__item
      padding: 10px 0  
      