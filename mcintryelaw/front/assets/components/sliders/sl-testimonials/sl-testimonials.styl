.sl-testimonials
  &__list
    padding 44px 0 36px
    opacity 0
    margin: 0 -12px
  &__item
    padding 0 12px
    position relative
    cursor pointer
    tro()
    &:hover
      opacity .8
    img
      width 100%
      height 420px
      object-fit: cover
    svg  
      position absolute
      left calc(50% - 29px)
      top calc(50% - 29px)
  &__arrows
    display flex
    column-gap: 14px
    svg 
      fill none      
    
+media-mobile(600px)    
 .sl-testimonials
    &__list
      padding-top 0
      margin 0
    &__item
      padding: 12px 0  
      