.sl-gallery
  background: $bg-color-blue
  padding 70px 0 80px 0
  margin-bottom: $container-padding-desktop;
  &__wrapper
    max-width: 1012px
    margin 0 auto
  &__title
    margin-bottom 20px
  &__text
    margin-bottom 50px 
    max-width: 902px
  &__inner
    position relative
    svg
      fill none
  &__prev
  &__next    
    position absolute
    top calc(50% - 23px)
    z-index 1
  &__prev
    left -79px
  &__next  
    right -79px 
  &__item
    &-inner
      padding-top 48.5%
      position relative
    img
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      object-fit: cover

+media-desktop(1200px) 
  .sl-gallery      
    &__prev
      left -30px
    &__next  
      right -30px 

+media-tablet()
  margin-bottom: $container-padding-mobile;  
  .sl-gallery   
    padding 60px 0;
    &__wrapper
      padding 0 30px
    &__text
      margin-bottom 40px 
    &__inner
      padding-bottom 66px
    &__prev
    &__next  
      top auto  
      bottom 0
    &__prev
      left calc(50% - 56px) 
    &__next  
      right calc(50% - 56px)    
    &__item
      &-inner
        margin-bottom 20px

